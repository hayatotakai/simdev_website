---
// Advantages.astro
export interface Advantage {
  title: string;
  description: string;
  icon: string; // SVG string
}

export interface Props {
  advantages: Advantage[];
}
const { advantages } = Astro.props;
---

<section class="advantages-section">
  <div class="advantages-container">
    <h2>Advantages</h2>
    <div class="advantages-track">
      {advantages.map((adv) => (
        <div class="advantages-card">
          <div>
            <div class="advantages-eyebrow">{adv.title}</div>
            <h3>{adv.description}</h3>
          </div>
          {/* <div class="advantages-icon" innerHTML={adv.icon}></div> */}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
/* ----------------------------------
   Advantages â€“ Apple-style cards
---------------------------------- */
.advantages-section{
    font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
    position: relative;
    background-color: var(--gray5);
    width:100%;
    /* max-width: var(--max-width); */
    /* margin: auto; */

    min-height:550px;
    padding: 20px 0;}

.advantages-container{
position: relative;
height:fit-content;
  width:80%;
  max-width: 1600px;
  margin: auto;
  padding: 20px;
}
.advantages-container h2{
  color: var(--gray1);
  text-align: left;
  margin-bottom: 40px;
}
.advantages-track {
  display: grid;
  grid-auto-flow: column;
  grid-auto-columns: minmax(280px, 1fr);
  gap: 3rem;
  overflow-x: auto;
    scroll-snap-type: x mandatory;
  overscroll-behavior-y: auto;
  padding-bottom: 1rem;
}

.advantages-card {
  background: var(--gray1);
  border-radius: 22px;
  padding: 2rem 1.75rem;
  min-height: 300px;
  width:250px;
  box-shadow: 0 6px 20px rgba(0,0,0,0.04);
  scroll-snap-align: start;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.advantages-eyebrow {
  font-size: 0.85rem;
  font-weight: 600;
  color: var(--gray4);
  margin-bottom: 0.5rem;
}

.advantages-card h3 {
  font-size: 1.4rem;
    color: var(--gray5);
    text-align: left;
  font-weight: 600;
  line-height: 1.3;
}

.advantages-icon {
  font-size: 2rem;
  color: var(--gray4);
  margin-top: 1.5rem;
}
</style>
