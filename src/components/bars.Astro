  width:50%;
}

.cmp-table-column-title{
  margin: 5px 0 0 0;
}
.cmp-table-column {
  width: 100%;
  box-sizing: border-box;
  padding: 10px;
  border-radius: 16px;
  display: flex;
  flex-direction: column;
  gap: 20px;
  position: relative;
  overflow: hidden;
}

/* Only Air-X column gets red styling */
.cmp-table-column-airx {
  border: 1px solid var(--red);
  
}

.cmp-table-column-airx::before {
  content: "";
  position: absolute;
  inset: 0;
  background-color: var(--red);
  opacity: 0.3;
  z-index: 0;
}

.cmp-table-column-airx > * {
  position: relative;
  z-index: 1;
}

/* Competitor column stays clean */
.cmp-table-column-comp {
  background: none;
}

.cmp-table-video-wrapper {
  position: relative;
