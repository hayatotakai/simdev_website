/**
 * Convert filename to human-readable title
 * Example: "oil_properties.astro" → "Oil Properties"
 */
function cleanName(filename) {
  return filename
    .replace('.astro', '')
    .replace(/[-_]/g, ' ')
    .replace(/\b\w/g, (c) => c.toUpperCase());
}

const basePath = import.meta.env.BASE_URL;

// Load top-level pages from /pages/*.astro
const sitePages = import.meta.glob('../pages/*.astro');
const topLevelLinks = Object.keys(sitePages)
  .filter((path) => !path.endsWith('index.astro'))
  .filter((path) => !path.endsWith('filter-technology.astro'))
  .map((path) => {
    const filename = path.split('/').pop().replace('.astro', '');
    return {
      url: `${basePath}${filename}`,
      title: cleanName(filename)
    };
  });

// Load /pages/tools/*.astro
const toolPages = import.meta.glob('../pages/tools/*.astro');
const toolLinks = Object.keys(toolPages)
  .map((path) => {
    const filename = path.split('/').pop().replace('.astro', '');
    return {
      url: `${basePath}tools/${filename}`,
      title: cleanName(filename)
    };
  });
---

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,100..1000&display=swap" rel="stylesheet">

<header class="site-header">
  <nav class="site-navbar">
    {topLevelLinks.map((link) => (
      <a href={link.url} class="nav-link">{link.title}</a>
    ))}

    <div class="nav-dropdown">
      <span class="dropdown-trigger">Tools ▼</span>
      <div class="dropdown-content">
        {toolLinks.map((tool) => (
          <a href={tool.url} class="dropdown-link">{tool.title}</a>
        ))}
      </div>
    </div>
  </nav>
</header>

<style>
